{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchFileNames": [
        "apps/**/app/helmrelease.yaml"
      ],
      "enabled": true,
      "groupName": "helm-releases",
      "groupSlug": "helm-releases",
      "schedule": [
        "at any time"
      ],
      "labels": [
        "helm",
        "dependencies"
      ],
      "prHourlyLimit": 4,
      "prConcurrentLimit": 16,
      "rangeStrategy": "pin",
      "separateMajorMinor": true,
      "separateMultipleMajor": true,
      "semanticCommits": "enabled",
      "matchPackageNames": [
        "/^.*$/"
      ]
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "ignoreDeps": [],
  "ignorePaths": [],
  "prHourlyLimit": 4,
  "prConcurrentLimit": 16,
  "schedule": [
    "at any time"
  ],
  "semanticCommits": "enabled",
  "minimumReleaseAge": "3 days",
  "timezone": "UTC"
}
